  c-sources:         cbits/half.c

  other-modules:
    ReferenceImpl,
    ReferenceTests,
    CBORTests

  build-depends:
    base, ghc-prim,
    bytestring,
    base64-bytestring,
    base16-bytestring,
    text,
    array,
    time >=1.4,
    deepseq,
    scientific,
